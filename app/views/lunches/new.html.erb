<h1>Add a Lunch </h1>
<%= form_for @lunch do |f| %>
 <%= f.label :name_of_group %>
 <%= f.text_field :name %>
 <br>

  <%= label_tag(:date, "Date:") %>
  <%= date_field_tag(:date) %>
 <br>
  <%= label_tag(:date, "Time to meet at door:") %>
  <%= time_field_tag(:time) %>
 <br>
 <%= f.label :price_range %>
 <%= f.select :price, @prices%>
 <br>
  Optional Fields
 <br><br>
 <%= f.label :location %>
 <%= f.text_field :location %>
 <br>
 <%= f.label :category %>
 <%= f.select :category, @categories%>
 <br>
 <%= f.label :description %>
 <%= f.text_field :description %>

 <%= f.submit "Add Lunch Group" %>
<% end %>
